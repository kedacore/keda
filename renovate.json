{
  "extends": [
    "config:base",
    ":gitSignOff",
    "default:disablePrControls",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": [
    "enhancement",
    "dependency-management"
  ],
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "enabled": false
    },
    {
      "matchManagers": ["gomod"],
      "postUpdateOptions": ["gomodTidy", "gomodVendor"]
    },
    {
      "matchDatasources": ["docker"],
      "pinDigests": true
    },
    {
      "matchManagers": ["github-actions"],
      "pinDigests": true
    }
  ]
}